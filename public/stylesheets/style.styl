@import url(http://fonts.googleapis.com/css?family=Electrolize);

$orange = #ff1800;

body
  font-family: 'Electrolize', sans-serif;
  color: #fff;
  background: url("/images/background.jpg") no-repeat center center fixed; 
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
.introPage
  width: auto;
  height: 280px;
  position: absolute;
  top: 50%;
  margin-top: -150px;
  margin-left: 150px;
  display: inline-block;
  padding: 20px;
#containerDiv
  background: rgba(0,0,0,0.1);
  border-radius: 20px;
h1
  margin: 0;
  padding: 0;
  color: white;
  text-shadow: 0px 0px 5px black;
  font-weight: bold;
  font-size: 60px;
input
  background: black;
  border: none;
  font-family: 'Electrolize', sans-serif;
  padding: 5px;
  border-radius: 5px;
  font-size: 20px;
  color: white;
  width: 300px;
p
  margin-left: 4px;
#submitButton
  background: rgba(100,100,100,0.5);
  padding: 5px;
  font-size: 20px;
  font-family: 'Electrolize', sans-serif;
  display: inline-block;
  border: none;
  border-radius: 5px;
  box-shadow: 0px 0px 2px 2px black;
  width: 50px;
  position: absolute;
  left: 50%;
  margin-top: 15px;
  margin-left: -27.5px;
  text-align:center;
  &:hover
    box-shadow: 0px 0px 1px 1px black;
  &:active
    box-shadow: inset 0px 0px 1px 1px black;
